<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:scrollbars="vertical"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="48dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application Launcher"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <!-- Device Status -->
        <TextView
            android:id="@+id/appLauncherDeviceStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checking device connection..."
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch or stop applications on your device"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="16dp"/>

        <!-- YouTube Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YouTube"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/launchYouTubeButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="LAUNCH YOUTUBE"
                android:textStyle="bold"
                android:background="@android:color/holo_green_dark"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/stopYouTubeButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="STOP YOUTUBE"
                android:textStyle="bold"
                android:background="@android:color/holo_red_dark"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Netflix Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Netflix"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/launchNetflixButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="LAUNCH NETFLIX"
                android:textStyle="bold"
                android:background="@android:color/holo_green_dark"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/stopNetflixButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="STOP NETFLIX"
                android:textStyle="bold"
                android:background="@android:color/holo_red_dark"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Status Display -->
        <TextView
            android:id="@+id/appLauncherStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to launch applications"
            android:textSize="14sp"
            android:padding="16dp"
            android:background="#FFF9C4"
            android:gravity="center"
            android:textStyle="italic"/>

        <!-- Help Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example Usage"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Launch YouTube: catalogVendorID=0, applicationID=YouTube\n• Stop YouTube: catalogVendorID=0, applicationID=YouTube\n\nThe ApplicationLauncher cluster will send the launch/stop command to the device."
            android:textSize="12sp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:lineSpacingMultiplier="1.3"/>

    </LinearLayout>
</ScrollView>
