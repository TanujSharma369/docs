<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Device Status -->
        <TextView
            android:id="@+id/deviceStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checking device connection..."
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <!-- Remote Control Panel -->
        <LinearLayout
            android:id="@+id/remoteControlPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2C2C2C"
            android:padding="24dp"
            android:visibility="visible">

            <!-- Power Button -->
            <Button
                android:id="@+id/btnPower"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="POWER"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp"/>

            <!-- Navigation Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navigation"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- D-Pad Navigation -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Up Button -->
                <Button
                    android:id="@+id/btnUp"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:text="UP"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <!-- Left, Select, Right Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnLeft"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="LEFT"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/btnSelect"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="OK"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:background="@android:color/holo_blue_dark"/>

                    <Button
                        android:id="@+id/btnRight"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="RIGHT"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Down Button -->
                <Button
                    android:id="@+id/btnDown"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:text="DOWN"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <!-- Menu Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnHome"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="HOME"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnMenu"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="MENU"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="BACK"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Volume and Channel Controls -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volume &amp; Channel"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Volume Controls -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <Button
                        android:id="@+id/btnVolumeUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="VOL +"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>

                    <Button
                        android:id="@+id/btnMute"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="MUTE"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>

                    <Button
                        android:id="@+id/btnVolumeDown"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="VOL -"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Channel Controls -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <Button
                        android:id="@+id/btnChannelUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="CH +"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="4dp"/>

                    <Button
                        android:id="@+id/btnChannelDown"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="CH -"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Media Controls -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Media Controls"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnRewind"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="&lt;&lt;"
                    android:textSize="18sp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnPlay"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="PLAY"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@android:color/holo_green_dark"/>

                <Button
                    android:id="@+id/btnFastForward"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="&gt;&gt;"
                    android:textSize="18sp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnStop"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="STOP"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnPause"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="PAUSE"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Number Pad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number Pad"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Number Rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
