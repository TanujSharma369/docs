<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1C1C1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with status and voice -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/indicator_disconnected"/>

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/statusIndicator"
                android:layout_marginStart="6dp"
                android:layout_centerVertical="true"
                android:text="Disconnected"
                android:textColor="#9E9E9E"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/voiceInputIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_ai_voice"
                android:tint="#FFFFFF"
                android:padding="6dp"
                android:background="@drawable/bg_voice_input"
                android:contentDescription="Voice Control"/>
        </RelativeLayout>

        <!-- Keypad (adaptive: rows scale to fit screen) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1F1F1F"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="1"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="2"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="3"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="4"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="5"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="6"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="7"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="8"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="9"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Row 4 (0 centered) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/key0"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="#2C2C2C"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                        android:layout_width="184dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#2C2C2C"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- Home icon -->
                            <ImageView
                                android:id="@+id/homeButton"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_home_premium"
                                android:tint="#FFFFFF"
                                android:padding="6dp"
                                android:contentDescription="Home"/>

                            <!-- Divider -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:background="#3A3A3A"/>

                            <!-- Back icon -->
                            <ImageView
                                android:id="@+id/backButton"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_back_premium"
                                android:tint="#FFFFFF"
                                android:padding="6dp"
                                android:contentDescription="Back"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Keypad (compact to avoid scroll) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1F1F1F"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
            
            <GridLayout
                android:id="@+id/keypadGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:padding="4dp"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="false">
                
                <!-- Row 1: 1, 2, 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key2"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key3"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Row 2: 4, 5, 6 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key4"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key5"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key6"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Row 3: 7, 8, 9 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key7"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key8"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8"
