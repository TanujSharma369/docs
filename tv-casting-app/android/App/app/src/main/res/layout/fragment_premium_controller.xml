<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- TOP BAR: Voice (Left) & Connection Status with Text (Right) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Voice Input Icon -->
        <ImageView
            android:id="@+id/voiceInputIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_ai_voice"
            android:background="@drawable/bg_voice_input"
            android:contentDescription="Voice Input"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- Connection Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#151515"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <View
                android:id="@+id/connectionIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/indicator_disconnected"/>

            <TextView
                android:id="@+id/statusHintText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnected"
                android:textSize="11sp"
                android:textColor="#AAAAAA"
                android:fontFamily="sans-serif"/>
        </LinearLayout>
    </LinearLayout>

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- D-PAD NAVIGATION -->
        <RelativeLayout
            android:id="@+id/dpadSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center">

            <!-- UP -->
            <ImageView
                android:id="@+id/btnNavUp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_nav_up"
                android:contentDescription="Navigate Up"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"/>

            <!-- LEFT -->
            <ImageView
                android:id="@+id/btnNavLeft"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/btnNavUp"
                android:layout_toStartOf="@id/btnNavOk"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_nav_left"
                android:contentDescription="Navigate Left"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"/>

            <!-- OK (CENTER) -->
            <ImageView
                android:id="@+id/btnNavOk"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/btnNavUp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_nav_select"
                android:contentDescription="Select/OK"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"/>

            <!-- RIGHT -->
            <ImageView
                android:id="@+id/btnNavRight"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/btnNavUp"
                android:layout_toEndOf="@id/btnNavOk"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_nav_right"
                android:contentDescription="Navigate Right"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"/>

            <!-- DOWN -->
            <ImageView
                android:id="@+id/btnNavDown"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/btnNavOk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_nav_down"
                android:contentDescription="Navigate Down"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"/>

            <!-- HOME & BACK -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnNavDown"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnHome"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Home"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Back"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- APP LAUNCHERS -->
        <LinearLayout
            android:id="@+id/appLaunchersContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <!-- YouTube Icon Button -->
            <ImageView
                android:id="@+id/btnYoutube"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_youtube"
                android:contentDescription="YouTube"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"/>

            <!-- Netflix Icon Button -->
            <ImageView
                android:id="@+id/btnNetflix"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_netflix"
                android:contentDescription="Netflix"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- NUMERIC KEYPAD -->
        <GridLayout
            android:id="@+id/keypadSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:columnCount="3"
            android:rowCount="4"
            android:padding="4dp">

            <!-- ROW 1: 1 2 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <!-- ROW 2: 4 5 6 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <!-- ROW 3: 7 8 9 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <!-- ROW 4: Empty, 0, Empty -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnKey0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
        </GridLayout>
    </LinearLayout>

</RelativeLayout>
