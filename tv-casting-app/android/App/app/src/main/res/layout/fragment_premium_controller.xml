<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1C1C1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with status and voice -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            
            <!-- Status Indicator top left -->
            <ImageView
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/indicator_disconnected"/>
            
            <!-- Voice icon top right -->
            <ImageView
                android:id="@+id/voiceInputIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_ai_voice"
                android:tint="#FFFFFF"
                android:padding="6dp"
                android:background="@drawable/bg_voice_input"
                android:contentDescription="Voice Control"/>
        </RelativeLayout>

        <!-- Quick Launch Apps -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <androidx.cardview.widget.CardView
                android:id="@+id/youtubeCard"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="#282828"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_youtube"
                    android:contentDescription="YouTube"/>
            </androidx.cardview.widget.CardView>
            
            <androidx.cardview.widget.CardView
                android:id="@+id/netflixCard"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardBackgroundColor="#282828"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_netflix"
                    android:contentDescription="Netflix"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Navigation Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#1F1F1F"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">
                
                <!-- D-Pad Navigation (precise 3x3 grid for symmetry) -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:rowCount="3"
                    android:columnCount="3"
                    android:alignmentMode="alignBounds"
                    android:useDefaultMargins="false"
                    android:layout_marginBottom="12dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <!-- Top row: empty, Up, empty -->
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/navUp"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#2C2C2C"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_nav_up"
                            android:tint="#FFFFFF"
                            android:padding="16dp"
                            android:contentDescription="Up"/>
                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_columnWeight="1"/>

                    <!-- Middle row: Left, OK, Right -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/navLeft"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="12dp"
                        app:cardBackgroundColor="#2C2C2C"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_nav_left"
                            android:tint="#FFFFFF"
                            android:padding="16dp"
                            android:contentDescription="Left"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/okButton"
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="#0A84FF"
                        app:cardCornerRadius="38dp"
                        app:cardElevation="0dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="OK"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/navRight"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="12dp"
                        app:cardBackgroundColor="#2C2C2C"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_nav_right"
                            android:tint="#FFFFFF"
                            android:padding="16dp"
                            android:contentDescription="Right"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Bottom row: empty, Down, empty -->
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_columnWeight="1"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/navDown"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_marginTop="12dp"
                        app:cardBackgroundColor="#2C2C2C"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_nav_down"
                            android:tint="#FFFFFF"
                            android:padding="14dp"
                            android:contentDescription="Down"/>
                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_columnWeight="1"/>
                </GridLayout>
                
                <!-- Home/Back pill bar -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:paddingTop="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#2C2C2C"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- Home icon -->
                            <ImageView
                                android:id="@+id/homeButton"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_home_premium"
                                android:tint="#FFFFFF"
                                android:padding="8dp"
                                android:contentDescription="Home"/>

                            <!-- Divider -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:background="#3A3A3A"/>

                            <!-- Back icon -->
                            <ImageView
                                android:id="@+id/backButton"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_back_premium"
                                android:tint="#FFFFFF"
                                android:padding="8dp"
                                android:contentDescription="Back"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Keypad (compact to avoid scroll) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1F1F1F"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
            
            <GridLayout
                android:id="@+id/keypadGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:padding="6dp"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="false">
                
                <!-- Row 1: 1, 2, 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key2"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key3"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Row 2: 4, 5, 6 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key4"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key5"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key6"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Row 3: 7, 8, 9 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key7"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key8"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key9"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Row 4: Empty, 0, Empty (centered) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key0"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#2C2C2C"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
