<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER WITH STATUS -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#2C2C2E"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_alignParentEnd="true">

                <View
                    android:id="@+id/connectionIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/indicator_disconnected"/>

                <TextView
                    android:id="@+id/statusHintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disconnected"
                    android:textSize="12sp"
                    android:textColor="#AAAAAA"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- VOICE INPUT -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#2C2C2E"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/voiceInputIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_ai_voice"
                    android:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voice Control"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- APP LAUNCHERS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUICK LAUNCH"
            android:textSize="12sp"
            android:textColor="#8E8E93"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnYoutube"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#2C2C2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_youtube"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YouTube"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnNetflix"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="#2C2C2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_netflix"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Netflix"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- NAVIGATION CONTROLS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAVIGATION"
            android:textSize="12sp"
            android:textColor="#8E8E93"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2C2C2E"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp">

                <!-- UP -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnNavUp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="18dp"
                        android:src="@drawable/ic_nav_up"
                        android:tint="#FFFFFF"/>
                </androidx.cardview.widget.CardView>

                <!-- LEFT -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnNavLeft"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/btnNavUp"
                    android:layout_toStartOf="@id/btnNavOk"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="18dp"
                        android:src="@drawable/ic_nav_left"
                        android:tint="#FFFFFF"/>
                </androidx.cardview.widget.CardView>

                <!-- OK CENTER -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnNavOk"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/btnNavUp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#007AFF"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="OK"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

                <!-- RIGHT -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnNavRight"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/btnNavUp"
                    android:layout_toEndOf="@id/btnNavOk"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="18dp"
                        android:src="@drawable/ic_nav_right"
                        android:tint="#FFFFFF"/>
                </androidx.cardview.widget.CardView>

                <!-- DOWN -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnNavDown"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/btnNavOk"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="18dp"
                        android:src="@drawable/ic_nav_down"
                        android:tint="#FFFFFF"/>
                </androidx.cardview.widget.CardView>

                <!-- HOME & BACK -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnNavDown"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnHome"
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="12dp"
                        app:cardBackgroundColor="#3A3A3C"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="6dp"
                                android:src="@drawable/ic_home"
                                android:tint="#FFFFFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnBack"
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="12dp"
                        app:cardBackgroundColor="#3A3A3C"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="6dp"
                                android:src="@drawable/ic_back"
                                android:tint="#FFFFFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Back"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- NUMERIC KEYPAD -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEYPAD"
            android:textSize="12sp"
            android:textColor="#8E8E93"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#2C2C2E"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:padding="20dp"
                android:alignmentMode="alignMargins">

                <!-- Row 1: 1 2 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>

                <!-- Row 2: 4 5 6 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>

                <!-- Row 3: 7 8 9 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey9"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>

                <!-- Row 4: 0 centered -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnKey0"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="70dp"/>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
