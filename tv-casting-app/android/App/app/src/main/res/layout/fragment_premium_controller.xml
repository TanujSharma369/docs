<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1C1C1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with status and voice -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            
            <!-- Status Indicator top left -->
            <ImageView
                android:id="@+id/statusIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/indicator_disconnected"/>
            
            <!-- Voice icon top right -->
            <ImageView
                android:id="@+id/voiceInputIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_ai_voice"
                android:tint="#FFFFFF"
                android:padding="10dp"
                android:background="@drawable/bg_voice_input"
                android:contentDescription="Voice Control"/>
        </RelativeLayout>

        <!-- Quick Launch Apps -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            
            <androidx.cardview.widget.CardView
                android:id="@+id/youtubeCard"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#2C2C2E"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_youtube"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YouTube"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <androidx.cardview.widget.CardView
                android:id="@+id/netflixCard"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#2C2C2E"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_netflix"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Netflix"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Radial Navigation Controls - Batman Crescent Style -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#2C2C2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                
                <!-- Center OK Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/okButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="#007AFF"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="OK"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Up Crescent - Wide Batman Moon spanning left to right -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/navUp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_above="@id/okButton"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_nav_up"
                        android:tint="#FFFFFF"
                        android:padding="8dp"
                        android:contentDescription="Up"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Down Crescent - Wide Batman Moon spanning left to right -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/navDown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/okButton"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_nav_down"
                        android:tint="#FFFFFF"
                        android:padding="8dp"
                        android:contentDescription="Down"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Left Crescent - Tall Batman Moon spanning top to bottom -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/navLeft"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/okButton"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_nav_left"
                        android:tint="#FFFFFF"
                        android:padding="8dp"
                        android:contentDescription="Left"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Right Crescent - Tall Batman Moon spanning top to bottom -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/navRight"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/okButton"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_nav_right"
                        android:tint="#FFFFFF"
                        android:padding="8dp"
                        android:contentDescription="Right"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Home Button - Bottom Left Outside Ring -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/homeButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_home"
                        android:tint="#FFFFFF"
                        android:padding="12dp"
                        android:contentDescription="Home"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Back Button - Bottom Right Outside Ring -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/backButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_back"
                        android:tint="#FFFFFF"
                        android:padding="12dp"
                        android:contentDescription="Back"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Keypad -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2C2C2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            
            <GridLayout
                android:id="@+id/keypadGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:padding="12dp"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true">
                
                <!-- Row 1: 1, 2, 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key2"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key3"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Row 2: 4, 5, 6 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key4"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key5"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key6"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Row 3: 7, 8, 9 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key7"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key8"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/key9"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Row 4: Empty, 0, Empty (centered) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/key0"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#3A3A3C"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
